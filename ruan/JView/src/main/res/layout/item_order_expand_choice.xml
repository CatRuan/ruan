<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="16px"
        android:paddingRight="16px">

        <TextView
            android:id="@+id/tvDesc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16px"
            android:layout_marginTop="16px"
            android:maxLines="1"
            android:textSize="@dimen/text_m_size" />

        <com.piotrek.customspinner.CustomSpinner
            android:id="@+id/spChoice1"
            android:layout_width="0dp"
            android:layout_height="70px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="3px"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/text_default_size" />

        <ImageView
            android:layout_width="25px"
            android:layout_height="12px"
            android:layout_marginLeft="2px"
            android:background="@mipmap/icon_choice" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="16px"
        android:paddingRight="16px">

        <TextView
            android:id="@+id/tvDesc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16px"
            android:layout_marginTop="16px"
            android:maxLines="1"
            android:textSize="@dimen/text_m_size" />

        <com.piotrek.customspinner.CustomSpinner
            android:id="@+id/spChoice2"
            android:layout_width="0dp"
            android:layout_height="70px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="3px"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/text_default_size" />

        <ImageView
            android:layout_width="25px"
            android:layout_height="12px"
            android:layout_marginLeft="2px"
            android:background="@mipmap/icon_choice" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="16px"
        android:paddingRight="16px">

        <TextView
            android:id="@+id/tvDesc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16px"
            android:layout_marginTop="16px"
            android:maxLines="1"
            android:textSize="@dimen/text_m_size" />

        <com.piotrek.customspinner.CustomSpinner
            android:id="@+id/spChoice3"
            android:layout_width="0dp"
            android:layout_height="70px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="3px"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/text_default_size" />

        <ImageView
            android:layout_width="25px"
            android:layout_height="12px"
            android:layout_marginLeft="2px"
            android:background="@mipmap/icon_choice" />

    </LinearLayout>
</LinearLayout>





